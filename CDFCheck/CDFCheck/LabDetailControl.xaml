<UserControl x:Class="CDFCheck.LabDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="90" VerticalAlignment="Center">

    <StackPanel x:Name="LayoutRoot" Background="Green" VerticalAlignment="Top" Height="85">
        <TextBlock x:Name="LabName" Margin="5" TextWrapping="Wrap" Text="Lab: nx" VerticalAlignment="Top" FontSize="36" Foreground="White"/>
        <TextBlock x:Name="Detail" Margin="20,0,0,5" Foreground="White">Usage: 80/100 (80%)</TextBlock>
    </StackPanel>
</UserControl>